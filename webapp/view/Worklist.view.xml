<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" controllerName="demo.train.controller.Worklist">

	<semantic:FullscreenPage id="page" semanticRuleSet="Optimized" title="{i18n>worklistViewTitle}">
		<semantic:content>
			<Table id="table" width="auto" class="sapUiResponsiveMargin" items="{      path: '/TRAININFO',      sorter: {       path: 'JIKOKU',       descending: true      }     }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>


				<columns>
<!--					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>-->
					
				<Column id="__columnTIME" width="15%">
					    <header>
					        <Label text="時刻" id="__labelTIME"/>
					    </header>
					</Column>	
					
					<Column id="__columnLINE" width="20%">
					    <header>
					        <Label text="路線" id="__labelLINE"/>
					    </header>
					</Column>
					
					<Column id="__columnINFOTEXT" width="50%">
					    <header>
					        <Label text="情報" id="__labelINFOTEXT"/>
					    </header>
					</Column>					
					

					<Column id="__columnSTATUS" width="15%">
					    <header>
					        <Label text="状態" id="__labelSTATUS"/>
					    </header>
					</Column>


				
					

				</columns>

				<items>
					<ColumnListItem press="onPress">
						<cells>
							<Text text="{         path: 'JIKOKU',         type: 'sap.ui.model.odata.type.Time',         formatOptions: {style: 'short'}}" id="__JIKOKU"/>	
<!--							<ObjectIdentifier
								title="{LINE}"/>-->
							<Text text="{LINE}" id="__LINE"/>
							<Text text="{INFOTEXT}" id="__INFOTEXT"/>
							<Text text="{STATUS}" id="__STATUS"/>

							
							
								
								
								
						</cells>
						
						
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>


	</semantic:FullscreenPage>

</mvc:View>